<% unless current_user == user %>
  <% if current_user.like?(user) %>
    <%= form_with(model: current_user.favorites.find_by(user_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :user_id, user.id %>
      <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>